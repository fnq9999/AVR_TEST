void pre_transfer(unsigned char *t){
	 t[0]&=0x7f;	 t[1]&=0x7f;
	 t[2]&=0x3f;	 t[3]&=0x3f;
 	 t[4]&=0x07;	 t[5]&=0x1f;
}


///use_to_display_val_to_com_string_ok
void val_msc_to_pc(unsigned char *t){
	 unsigned char i=0;
	 ind=0;
	 for(i=0;i<6;++i){  
	 	tem[ind++]='0'+(t[i]/16);
		tem[ind++]='0'+(t[i]%16);
	 }
	 
}
void val_pc_to_msc(unsigned char *t){
	 unsigned char i=0;
	 for(ind=0;ind<6;++ind){  
	 	tem[ind]=((t[2*ind]-'0')/10)<<4;
		tem[ind]|=(t[2*ind+1]-'0')%10;
	 }
	 for(i=0;i<6;++i){
	 	t[i]=tem[i];
	 }
}


