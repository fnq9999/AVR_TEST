#include "config.h"
#include<time.h>

unsigned char tem[20];

unsigned char tem2[20];
unsigned char ind=0;

void time_init()
{

 	 	time now;
		time(&now);
		struct tm *tm_now;
		tm_now=localtime(&now);
	
         pcf_set_byte(0x02,0x00);         //秒
         pcf_set_byte(0x03,0x00);         //分钟    
         pcf_set_byte(0x04,0x0);          //时             
         pcf_set_byte(0x05,0x0);          //日
         pcf_set_byte(0x06,0x0);          //星期
         pcf_set_byte(0x07,0x0);          //月
         pcf_set_byte(0x08,0x0);          //年
}



void pre_transfer(unsigned char *t,unsigned char len){
	 t[0]&=0x7f;	 t[1]&=0x7f;
	 t[2]&=0x3f;	 t[3]&=0x3f;
 	 t[4]&=0x07;	 t[5]&=0x1f;
}


///use_to_display_val_to_com_string
void val_to_com(unsigned char *t,unsigned char len){
	 unsigned char i=0;
	 ind=0;
	 for(i=0;i<len;++i){  
	 	tem[ind++]='0'+(t[i]/16);
		tem[ind++]='0'+(t[i]%16);
	 }
	 
}
